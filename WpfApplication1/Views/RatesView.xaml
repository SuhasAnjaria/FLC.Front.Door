<UserControl 
    x:Class="flc.FrontDoor.Views.RatesView" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:extra="http://schemas.extra.com/ui" 
    xmlns:params="http://schemas.codeplex.com/elysium/params" 
    xmlns:metro="http://schemas.codeplex.com/elysium" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
    xmlns:Views="clr-namespace:flc.FrontDoor.Views" 
   Height="768" Width="1024">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <extra:AnimatedWrapPanel Grid.Row="1" >
        <Button Content="Select Security" Click="SelectSecurity">
               
        </Button>
            
        </extra:AnimatedWrapPanel>
        
        <DataGrid Grid.Row="2" Height="500"  Width="950"
               Margin="{Binding RelativeSource={RelativeSource Self}, Path=(params:General.BoldPadding), Mode=OneWay}"
              extra:UIElementAttached.IsBubblingMouseWheelEvents="True" AutoGenerateColumns="True" ItemsSource="{Binding RatesViewModel.A, Source={StaticResource ViewModelLocator}}"  >
              
               
            
        </DataGrid>
        
    </Grid>
</UserControl>
