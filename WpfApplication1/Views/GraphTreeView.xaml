<UserControl 
    x:Class="flc.FrontDoor.Views.GraphTreeView" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:extra="http://schemas.extra.com/ui" 
    xmlns:params="http://schemas.codeplex.com/elysium/params" 
    xmlns:metro="http://schemas.codeplex.com/elysium" 
    xmlns:xy="clr-namespace:flc.FrontDoor.Data" 
    mc:Ignorable="d" 
    Height="300" 
    Width="250">
    <UserControl.Resources>
       
        <ItemContainerTemplate x:Key="LastLegTemplate" >

            <Button 
                Focusable="False" 
                
                x:Name="SelectionButon" 
                 
                Margin="{Binding RelativeSource={RelativeSource Self}, Path=(params:General.BoldPadding), Mode=OneWay}" 
                Content="{Binding Converter={StaticResource ProductToNameConverter}}" 
                Click="_AttachSecurity"/>

        </ItemContainerTemplate>

    </UserControl.Resources>

    <Grid>
        

        <TreeView 
            x:Name="MyTree" 
            extra:UIElementAttached.IsBubblingMouseWheelEvents="True"
            HorizontalAlignment="Center"
            ItemsSource="{Binding Currencies}">


                    <TreeView.Resources>

                        <HierarchicalDataTemplate 
                            DataType="{x:Type xy:CurrencyViewModel}" 
                            ItemsSource="{Binding AssetTypes }">
                            
                                <TextBlock 
                                Focusable="False" 
                                Text="{Binding MyCurrency}" 
                              Style="{StaticResource TreeViewTextStyle}"
                                Margin="{Binding RelativeSource={RelativeSource Self}, Path=(params:General.BoldPadding), Mode=OneWay}"/>
                        
                        </HierarchicalDataTemplate>

                        <HierarchicalDataTemplate 
                            DataType="{x:Type xy:AssetTypeViewModel}" 
                            ItemsSource="{Binding ProductType}">

                            <TextBlock 
                                Text="{Binding MyAssetType}" 
                                Style="{StaticResource TreeViewTextStyle}"
                                Focusable="False" 
                                Margin="{Binding RelativeSource={RelativeSource Self}, Path=(params:General.BoldPadding), Mode=OneWay}"/>

                        </HierarchicalDataTemplate>
                        <HierarchicalDataTemplate 
                            DataType="{x:Type xy:ProductTypeViewModel}" 
                            ItemTemplate="{StaticResource LastLegTemplate}" 
                            ItemsSource="{Binding Products}" >
                            
                            <TextBlock Text="{Binding MyProductType}" SnapsToDevicePixels="True" Focusable="False" 
                                       Style="{StaticResource TreeViewTextStyle}"
                                    Margin="{Binding RelativeSource={RelativeSource Self}, Path=(params:General.BoldPadding), Mode=OneWay}"/>


                        </HierarchicalDataTemplate>

                    </TreeView.Resources>


                </TreeView>
    

       
    </Grid>
</UserControl>
